{
    "compilerOptions": {
      "target": "es2020",
      "module": "commonjs",
      "lib": ["dom", "esnext"],
      "allowJs": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "strict": true,
      "allowImportingTsExtensions": true,
      "noEmit": false,
      "outDir": "./dist",
      "types": ["node"],
      "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
  }
  